<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chargeuplogin.AddAvailableChargerActivity" >

    <LinearLayout
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/chargerid_"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Available ID: "
            />
        <LinearLayout
            android:id="@+id/group1_inside1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
            android:id="@+id/chargerid_add"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="charge id: "
            />
            <EditText
            android:id="@+id/chargerid_add_e"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:hint="charge ID"
            />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/group1_inside2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
            android:id="@+id/log_add"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="longitude: "
            />
            <EditText
            android:id="@+id/log_add_e"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:hint="longitude"
            />
        </LinearLayout>
        
    	<LinearLayout
            android:id="@+id/group1_inside3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
            android:id="@+id/lat_add"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="latitude: "
            />
            <EditText
            android:id="@+id/lat_add_e"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:hint="latitude"
            />
        </LinearLayout>        
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/group1"
        >
    	<Button 
    	    android:id="@+id/addCh"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:hint="Add Charger to list"
    	    />
    	
    	<LinearLayout
            android:id="@+id/group2_inside1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
            android:id="@+id/chargerid2_add"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:text="charge id: "
            />
            <EditText
            android:id="@+id/chargerid2_add_e"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:hint="charge ID"
            />
        </LinearLayout>
        
    	<Button 
    	    android:id="@+id/removeCh"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:hint="Remove Charger from list"
    	    />
    	
        <Button 
    	    android:id="@+id/cancelCh"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:hint="Go Back"
    	    />
    </LinearLayout>

</RelativeLayout>
