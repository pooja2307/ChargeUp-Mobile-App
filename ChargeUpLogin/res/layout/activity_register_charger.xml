    <LinearLayout
        android:id="@+id/group1_regCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="180dp"
            android:layout_height="40dp" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="180dp"
            android:layout_height="40dp"
            
            />
    </LinearLayout>
     
    <LinearLayout
        android:id="@+id/group2_regCh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/group1_regCh">
        
        <Button
            android:id="@+id/btnRegisterCh"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:hint="@string/str_RegisterCharger"
            android:textSize="13sp"/>
        <Button
            android:id="@+id/btnCancel_RegisterCh"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:hint="@string/str_btnCancel_RegisterCh"
            android:textSize="13sp"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/errormsg_registerCh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group2_regCh"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"        
        />
    

</RelativeLayout>
